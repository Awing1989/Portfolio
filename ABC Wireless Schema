CREATE TABLE promotion (
  "Promo_ID" VARCHAR,
  "Promotion_Name" VARCHAR,
  "Percent_Discount" NUMERIC
);

INSERT INTO promotion
  ("Promo_ID", "Promotion_Name", "Percent_Discount")
VALUES
  ('AA', 'Best', 0.90),
  ('AB', 'Better', 0.95),
  ('AC', 'Good', 0.975);

CREATE TABLE customer
  ("Customer_ID" VARCHAR,
  "First_Name" VARCHAR,
  "Last_Name" VARCHAR,
  "Address" VARCHAR,
  "Zip" INTEGER,
  "Purchase_ID" INTEGER
